<div class="comment">
  <p class="text-muted">Added by <strong><%#= comment.user_id %></strong></p>

  <blockquote>
    <p><%#= comment.content %></p>
  </blockquote>

  <%# from_reply_form ||= nil %>
  <%# unless from_reply_form %>
    <%# if comment.leaf? %>
      <small class="text-muted">There are no replies yet - be the first one to reply!</small>
    <%# end %>
    <p><%#= link_to 'reply', new_comment_path(comment.id) %></p>
  <%# end %>

</div>