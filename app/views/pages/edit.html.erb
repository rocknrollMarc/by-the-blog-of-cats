  <%= label_tag('page[theme]', 'Theme:') %>
  <%= text_field_tag('page[theme]') %>

  <%= submit_tag('Submit') %>

<% end %>

<%= form_tag "/pages/#{params[:id]}", method: :delete do %>
  <%= submit_tag("Delete") %>
<% end %>